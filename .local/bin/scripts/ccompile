file=$(readlink -f "$1")
dir=$(dirname "$file")
base="${file%.*}"

cd "$dir" || exit


case "$file" in
	*config.h) sudo make install ;;
	*config.def.h) rm -f config.h;sudo make install ;;
        *\.c) gcc -c "$file"   ;;
        *\.cc) g++ -c "$file"   ;;
        *\.cpp) g++ -c "$file" ;;
        *\.java) javac "$file"  ;;
	*\.py) python "$file" ;;
	*\.go) go run "$file" ;;
	*) sed 1q "$file" | grep "^#!/" | sed "s/^#!//" | xargs -r -I % "$file" ;;
esac
